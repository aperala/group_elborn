<form name="validate" method="POST", action="/contact" id="contact_form">

  <div class="form_title">First name:</div>
  <input class="form_field" type="text" name="firstname" required>
  
  <div class="form_title">Last name:</div>
  <input class="form_field" type="text" name="lastname" required>
  
  <div class="form_title">E-mail:</div>
  <input class="form_field" type="email" required>
  
  <div class="form_title">Phone:</div>
  (please include country code outside of Spain):
  <input class="form_field" type="tel" name="telnum" pattern="/^\(?\d(3)\)?-?\s*\d(3)\s*-?\d(4)$/" required>
  
  <div class="form_title">Your comments:</div>
  <input class="form_field" name="your_comments" id="comment_form">
   
  <div class="submit_container">
  <input type="submit"> 
  </div>
</form>
